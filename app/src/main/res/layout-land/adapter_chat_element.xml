<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/chat_author_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_grey_900_48dp"
        tools:src="@drawable/ic_person_grey_900_48dp" />

    <TextView
        android:id="@+id/chat_titre_annonce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:maxLength="20"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@id/chat_last_message"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_author_photo"
        tools:text="Aspirateursqdfsqdfqsdf qsdf qsdf qsdf qsdfqs df " />


    <TextView
        android:id="@+id/chat_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:maxLength="50"
        app:layout_constraintBottom_toTopOf="@id/chat_last_message_timestamp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/chat_popup_menu"
        app:layout_constraintTop_toBottomOf="@id/chat_titre_annonce"
        tools:text="Ceci est le dernier message que j'ai recu pour cette annonce.Et c'est vraiment un trÃ¨s long message qu'il faut absolument que je coupe.lmsdkflmqskdflmqskdflmkqsdflkqsdlmfkqsdlmfkqsdlmfk qsdfk qsdlmfk qslmdfk qsdlfk qsdlfk qsdlmfk qsdlfk qsdflmk qsdfk qsdflqk sdf" />

    <ImageView
        android:id="@+id/chat_popup_menu"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert_grey_600_48dp" />

    <TextView
        android:id="@+id/chat_last_message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/chat_last_message"
        app:layout_constraintTop_toBottomOf="@id/chat_last_message"
        tools:text="2j" />
</android.support.constraint.ConstraintLayout>