<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fui_transparent">

    <TextView
        android:id="@+id/title_slide_1"
        style="@style/IntroTextField.Heading.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sell_easily"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/text_slide_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_slide_2"
        style="@style/IntroTextField.Tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_slide_2"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/text_slide_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_slide_1" />

    <TextView
        android:id="@+id/text_slide_3"
        style="@style/IntroTextField.Tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/description_slide_3"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_slide_2" />
</androidx.constraintlayout.widget.ConstraintLayout>