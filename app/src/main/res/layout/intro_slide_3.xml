<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fui_transparent"
    tools:background="@color/colorAccent">

    <TextView
        android:id="@+id/title_slide_1"
        style="@style/IntroTextField.Heading.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/keep_contact"
        app:layout_constraintBottom_toTopOf="@id/img_telephone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_telephone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/text_slide_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_slide_1"
        app:srcCompat="@drawable/ic_phone_white_48dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_mail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="@+id/img_telephone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_telephone"
        app:srcCompat="@drawable/ic_email_white_48dp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_chat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_telephone"
        app:layout_constraintTop_toTopOf="@+id/img_telephone"
        app:srcCompat="@drawable/ic_message_white_48dp" />


    <TextView
        android:id="@+id/text_slide_1"
        style="@style/IntroTextField.Tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="100dp"
        android:text="@string/intro_3_tagline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_telephone" />


</androidx.constraintlayout.widget.ConstraintLayout>