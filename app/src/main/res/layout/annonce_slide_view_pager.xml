<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_slide_view_pager"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_annonce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:transitionName="@string/transition_name_annonce_zoom"
        android:background="@color/colorAnnonceElementBackground"
        tools:visibility="gone" />

    <ProgressBar
        android:id="@+id/viewpager_loading_progress"
        android:layout_margin="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible" />

</FrameLayout>