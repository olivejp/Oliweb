<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/bottom_sheet_annonce_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_titre_annonce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_titre_annonce"
        tools:src="@drawable/avatar_photo_user" />

    <ImageView
        android:id="@+id/bottom_sheet_share_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@id/share"
        app:layout_constraintEnd_toEndOf="@id/bottom_sheet_annonce_image"
        app:layout_constraintTop_toTopOf="@id/share"
        app:srcCompat="@drawable/ic_share_grey_900_48dp" />

    <ImageView
        android:id="@+id/bottom_sheet_favorite_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@id/favorite"
        app:layout_constraintEnd_toEndOf="@id/bottom_sheet_annonce_image"
        app:layout_constraintTop_toTopOf="@id/favorite"
        app:srcCompat="@drawable/ic_favorite_grey_900_48dp" />

    <TextView
        android:id="@+id/bottom_sheet_titre_annonce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="72dp"
        android:ellipsize="end"
        android:paddingStart="10dp"
        android:paddingTop="25dp"
        android:paddingEnd="10dp"
        android:paddingBottom="25dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_annonce_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Titre de mon annonce" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/colorAccentDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_titre_annonce" />

    <TextView
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:text="Partager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_titre_annonce"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_titre_annonce" />

    <TextView
        android:id="@+id/favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:text="Ajouter au favoris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_titre_annonce"
        app:layout_constraintTop_toBottomOf="@id/share" />

</androidx.constraintlayout.widget.ConstraintLayout>