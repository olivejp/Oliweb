<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.OliwebBase">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorBottomDark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.OliwebBase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/colorBottomDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialogTheme" parent="MyDialogTheme.Base">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
</resources>
